<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLayouts.Layouts.StackLayouts.StackLayoutDemo"
             BackgroundColor="White"
             Title="StackLayoutDemo">
    <ScrollView Orientation="Vertical">
        <StackLayout Padding="20" Spacing="20" Orientation="Vertical">
            <Label
           Text=".Net MAUI Layouts"
           TextColor="Red"
           FontSize="20"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>
            
           
            <Button
                x:Name="verticalStackLayoutButton"
                Text="Vertical Stack Layout Demo 1"
                FontAttributes="Bold"
                FontSize="20"
                TextColor="Maroon"
                Clicked="verticalStackLayoutButton_Clicked"
                />
            <Button
                x:Name="horizontalStackLayoutButton"
                Text="Horizontal Stack Layout Demo 2"
                FontAttributes="Bold"
                FontSize="20"
                TextColor="Maroon"
                Clicked="horizontalStackLayoutButton_Clicked"    
                />
        </StackLayout>
    </ScrollView>
   
</ContentPage>