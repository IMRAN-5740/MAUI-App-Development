<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoginFlowDesign.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LoginFlowDesign"
    xmlns:pages="clr-namespace:LoginFlowDesign.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
      Title="Loading Page"
      ContentTemplate="{DataTemplate pages:LoadingPage}"
      Route="LoadingPage" 
        Shell.FlyoutBehavior="Disabled"
        Shell.FlyoutItemIsVisible="False"/>

    <ShellContent
   Title="Login Page"
   ContentTemplate="{DataTemplate pages:LoginPage}"
   Route="LoginPage" 
        Shell.FlyoutBehavior="Disabled"
        Shell.FlyoutItemIsVisible="False"/>


    <TabBar FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
           Title="Home"
           ContentTemplate="{DataTemplate local:MainPage}"
           Route="MainPage" />
        <ShellContent
          Title="Listing Page"
          ContentTemplate="{DataTemplate pages:ListingPage}"
          Route="ListingPage" />
         
        <ShellContent
          Title="Profile Page"
          ContentTemplate="{DataTemplate pages:ProfilePage}"
          Route="ProfilePage" />

        

    </TabBar>



</Shell>
