<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.Pages.TypeOfControls.DrawingControl.DrawingControls"
             Title="DrawingControls">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Frame BackgroundColor="#eaeefa"  >

                <Rectangle WidthRequest="200" 
                       HeightRequest="100"
                       Stroke="Green"
                       Fill="Maroon"
                       StrokeThickness="5"
                           RadiusX="10"
                           RadiusY="10"
                   />
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>
   
</ContentPage>