<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.Pages.TypeOfControls.CommonControl.CommonControls"
             Title="Common Controls"
             BackgroundColor="White"
             >
    <ScrollView VerticalScrollBarVisibility="Always">
        <VerticalStackLayout>
            <Frame  BackgroundColor="White" Margin="10">
                <VerticalStackLayout>
                    <Image Source="imran.png" HeightRequest="100"/>
                    <Label
                          Text="ReadLine Academy"
                          FontSize="20"
                          FontAttributes="Bold"
                          HorizontalOptions="Center"
                        TextColor="Black"
                        />
                </VerticalStackLayout>
            </Frame>
            <Frame BackgroundColor="White" Margin="10">
                <Border Padding="10" StrokeThickness="5" Stroke="Red" BackgroundColor="Gray">
                    <Label Text="Welcome to ReadLine Academy" TextColor="Black" HorizontalOptions="Center"/>
                </Border>
            </Frame>


            <WebView Source="https://github.com/IMRAN-5740" BackgroundColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
  
</ContentPage>