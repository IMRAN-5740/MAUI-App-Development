<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginPageMAUI.Controls.FlyoutHeaderControl"
             Padding="20">

    <StackLayout Orientation="Horizontal" Spacing="10">
        <Label x:Name="lblUserName" FontSize="22" FontAttributes="Bold"/>
        <Label x:Name="lblUserRoleText" VerticalTextAlignment="Center" FontAttributes="Bold" TextColor="Maroon" FontSize="10"/>
    </StackLayout>
    
    <Label x:Name="lblUserEmail" TextColor="Green" FontSize="15"/>
       

</StackLayout>
