<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPages.Layouts.StackLayoutDemo"
             Title="Stack Layout"
             BackgroundColor="White">
    <ScrollView Orientation="Vertical" >
        <StackLayout Padding="20" Spacing="10" Orientation="Vertical" VerticalOptions="Center">

            <Label
                Text=".Net Maui Layout Pages"
                Margin="20"
                FontAttributes="Bold"
                FontSize="20"
                TextColor="Red"
                HorizontalOptions="Center"/>   

            <Button 
                x:Name="verticalSL"
                Text="Go to Vertical Stack Layout"
                FontAttributes="Bold"
                FontSize="20"
                Clicked="verticalSL_Clicked"/>
            <Button 
                x:Name="horizontalSL"
                Text="Go to Horizontal Stack Layout"
                FontAttributes="Bold"
                FontSize="20"
                Clicked="horizontalSL_Clicked"/>

            <Button 
                 x:Name="gridLayout"
                 Text="Go to Grid Layout"
                 FontAttributes="Bold"
                 FontSize="20"
                Clicked="gridLayout_Clicked"
               />       

        </StackLayout>
    </ScrollView>
   
</ContentPage>